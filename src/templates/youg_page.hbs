{{#with young_page}}

    {{>head}}
    {{>header}}

    {{wedding.date}}

    <div class="jumbotron">
        <div class="col-md-8">

        </div>
        <div class="col-md-2">
            <div class="thumbnail">
                <img src="holder.js/100x100" alt=""/>
            </div>
        </div>
        <div class="col-md-2">
            <div class="thumbnail">
                <img src="holder.js/100x100" alt=""/>
            </div>
        </div>
    </div>

    <div class="row wedding-nav">
        {{#each wedding_menu}}
            <div class="col-md-3">
                <a href="/{{link}}.html" class="btn btn-{{#if active}}primary{{else}}default{{/if}} btn-lg">{{title}}</a>
            </div>
        {{/each}}
    </div>

    <div class="page-header">
        <h1>Свабедные карточки <small>вы еще не определились по этим пунктам</small></h1>
    </div>

    <div class="row wedding-cards">
        {{#each wedding_cards}}
            {{^if user}}
                <div class="col-md-3">
                    <div class="thumbnail">
                        <a href="#"
                                tabindex="0"
                                role="button"
                                class="btn btn-default btn-lg"
                                data-container="body"
                                data-toggle="popover"
                                data-placement="top"
                                data-trigger="focus"
                                data-title="У нас есть что предложить!"
                                data-content="В наше базе найдено {{count}} предложений по этому пункту. Вы можете выбрать исполнителя из них. ">
                            {{name}} <i class="fa fa-{{icon}}"></i>&nbsp;&nbsp;<span class="label label-default">{{count}}</span>
                        </a>
                        <br/><br/>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Я хочу ...  <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">найти исполнителя</a></li>
                                <li><a href="#">отметить найденным</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">удалить эту карточку</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>

    <div class="page-header">
        <h1>Свабедные карточки <small>с этими ребятами обо всем договорились</small></h1>
    </div>

    <div class="row wedding-cards-applied">
        {{#each wedding_cards}}
            {{#if user}}
                <div class="col-md-3">
                    <div class="thumbnail">
                        <a href="#"
                           tabindex="0"
                           role="button"
                           class="btn btn-default btn-lg">
                            {{name}} <i class="fa fa-{{icon}}"></i>&nbsp;&nbsp;<span class="label label-default">{{count}}</span>
                        </a>
                        <br/><br/>
                        <div class="row">
                            <div class="col-md-4"><img src="holder.js/80x80" alt=""/></div>
                            <div class="col-md-8">{{user.name}}</div>
                        </div>
                        <br/>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Я хочу ...  <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="#">отказаться от исполнителя</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">удалить эту карточку</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/each}}
    </div>

    {{>footer}}
    {{>foot}}

{{/with}}
